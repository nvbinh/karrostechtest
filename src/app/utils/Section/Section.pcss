@import "../../../css/variables.pcss";

.section {
  position: relative;
  padding: 2em 1em;

  @media (--desktop) {
    padding: 3em;
  }
}

.dark {
  /* background-color: var(--bgalt); */
  background-color: #eee;
  box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.25);
}

.title {
  text-align: center;
  margin-bottom: 1em;
  font-size: 30px;

  @media (--desktop) {
    font-size: 50px;
  }
}
